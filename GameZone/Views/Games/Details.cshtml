@model Game
@{
    ViewData["Title"] = Model.Name;
}
<div class="card border-light rounded-4 mt-3 overflow-hidden">
    <div class="card-body p-0">
        <div class="row">
            <div class="col-md-4">
                <img src="@($"{FileSettings.ImagePath}/{Model.Cover}")" alt="@Model.Name" class="w-100"/>
            </div> 
            <div class="col-md-8 px-2 py-2 d-flex flex-column justify-content-between" >
                <div>
                    <h1 class="fw-bolder">@Model.Name</h1>
                    <span class="badge rounded-pill btn-outline-light fs-4 mb-4">@Model.Category?.Name</span>
                <p class="fs-5">@Model.Description</p>
                </div>
                <div class="justify-content-end">
                    @foreach (var GameDevice in Model.Devices)
                    {
                        <i class="@GameDevice.Device.Icon me-2 fs-1 text-light"></i>
                    }
                </div>
            </div>
        </div>

    </div>

</div>